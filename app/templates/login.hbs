<div class="page-title">
    <PageTitle @title="Login" />
</div>
<div class="login-box">
    <input type="text" id="username" placeholder="Username" required>
    <input type="password" id="password" placeholder="Password" required>
    <input type="submit" value="Login" id="login-button" {{action "loginClick"}}>
    <p class="message">Don't have an account? <LinkTo @route="register" class="sub-text-link">Register</LinkTo></p>
</div>