<div class="page-title">
    <PageTitle @title="Login" />
</div>

<div class="login-box">
    <Input @value={{this.credentials.email}} placeholder="Email" />
    <Input @value={{this.credentials.password}} @type="password" placeholder="Password" />
    <input type="submit" value="Login" id="login-button" {{action "loginClick"}}>
    <p class="message">Don't have an account? <LinkTo @route="register" class="sub-text-link">Register</LinkTo></p>
</div>
<div id="login-error" class="login-error-message">{{this.error}}</div>